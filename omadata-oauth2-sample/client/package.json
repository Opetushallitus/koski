{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^5.2.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "http-proxy-middleware": "^3.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start": "FORCE_COLOR=true pnpm run start-react-scripts | cat",
    "start-react-scripts": "react-scripts start",
    "start-with-server": "pnpm -r run --parallel start-server start",
    "start-with-server-and-luovutuspalvelu": "pnpm -r run --parallel build-and-start-luovutuspalvelu start-server start",
    "start-with-server-and-luovutuspalvelu-and-java-sample": "pnpm -r run --parallel build-and-start-luovutuspalvelu start-server start start-java-sample",
    "start-with-server-and-luovutuspalvelu-no-logout": "NOLOGOUT=nologout pnpm -r run --parallel build-and-start-luovutuspalvelu start-server start",
    "start-server": "NODE_EXTRA_CA_CERTS=../../koski-luovutuspalvelu/proxy/test/testca/certs/root-ca.crt CLIENT_ID=omadataoauth2sample${NOLOGOUT} ENABLE_LOCAL_MTLS=true RESOURCE_ENDPOINT_URL=https://localhost:7022/koski/api/omadata-oauth2/resource-server pnpm run --prefix ../server start",
    "build-and-start-luovutuspalvelu": "KOSKI_BACKEND_HOST=${KOSKI_BACKEND_HOST:-http://$(node scripts/getmyip.js):7021} CLIENT_USERNAME=omadataoauth2sample${NOLOGOUT} CLIENT_PASSWORD=omadataoauth2sample${NOLOGOUT} pnpm run --prefix ../../koski-luovutuspalvelu/proxy local",
    "start-luovutuspalvelu": "KOSKI_BACKEND_HOST=${KOSKI_BACKEND_HOST:-http://$(node scripts/getmyip.js):7021} CLIENT_USERNAME=omadataoauth2sample${NOLOGOUT} CLIENT_PASSWORD=omadataoauth2sample${NOLOGOUT} pnpm run --prefix ../../koski-luovutuspalvelu/proxy start",
    "start-java-sample-and-luovutuspalvelu": "pnpm -r run --parallel build-and-start-luovutuspalvelu start-java-sample",
    "start-java-sample": "cd ../java && KOSKI_BACKEND_HOST=${KOSKI_BACKEND_HOST:-http://$(node ../client/scripts/getmyip.js):7021} ./mvnw spring-boot:run",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "pnpm run lint:types && pnpm run lint:problems",
    "lint:types": "tsc --noEmit",
    "lint:types:watch": "tsc --noEmit --watch --preserveWatchOutput",
    "lint:problems": "eslint",
    "fix": "pnpm run fix:format",
    "fix:format": "eslint --fix",
    "playwright:test": "DEBUG='pw:webserver' pnpm exec playwright test",
    "playwright:test:debug": "DEBUG='pw:webserver pw:api' pnpm exec playwright test --headed",
    "playwright:test:trace": "DEBUG='pw:webserver pw:api' pnpm exec playwright test --trace on && pnpm exec playwright show-report",
    "playwright:codegen": "pnpm exec playwright codegen",
    "preinstall": "node -e \"if(!process.env.npm_execpath.includes(\\\"pnpm\\\")){console.error(\\\"❌ Please use pnpm\\\");process.exit(1)}\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.11.0"
  }
}
